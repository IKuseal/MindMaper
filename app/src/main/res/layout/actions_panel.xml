<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f39707"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="4">

    <Button
        android:id="@+id/btnSon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:text="son"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnUpBrother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:text="upb"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnDownBrother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_margin="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:text="down"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_margin="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:text="del"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnLeftSon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:text="lson"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnRightSon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:text="rson"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnEditMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:text="mtex"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnEditAttachedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:text="atex"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_margin="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:text="styl"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_margin="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:text="Cop"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnPast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_margin="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:text="Past"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnCut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_margin="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingLeft="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="0dp"
        android:paddingBottom="4dp"
        android:text="cut"
        android:textSize="8sp" />

</GridLayout>